{
  "name": "Adk-Wallet",
  "productName": "ADK V2 Wallet",
  "version": "1.0.0",
  "description": "Aidos Kuneen V2 Wallet",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "author": "Aidos Kuneen <info@aidoskuneen.com>",
  "homepage": "http://aidoskuneen.com",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/AidosKuneen/ADK-V2-Wallet"
  },
  "build": {
    "extraResources": [
      {
        "from": "src/CLI",
        "to": "resources/src/CLI",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "adk.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "ADK-V2-Wallet"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "cryptocompare": "^1.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.18.1",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.7.8",
    "qrcode": "^1.5.1",
    "recharts": "^2.1.13",
    "sib-api-v3-sdk": "^8.4.2",
    "web3": "^1.7.5"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-dmg": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "electron": "19.0.8"
  }
}
